<div class="container">
  <div class="row">
    <div class="col-md-12 mt-3">
      <a
        href="/admin/add-products"
        type="button"
        style="color:white; font-weight:bold ; width:25% "
        class="btn btn-success btn-lg btn-block float-right"
      >ADD PRODUCTS</a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mt-4">
      <table class="table" id="product-table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
          </tr>
        </thead>

        <tbody>
          {{#each products}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.category}}</td>
              <td>{{this.price}}</td>
              <td><img
                  src="/images/{{this._id}}.jpg"
                  style="height: 50px; width: 50px;"
                  alt=""
                /></td>
              <td>
                <a
                  href="/admin/edit-products/{{this._id}}"
                  style="color:white"
                  type="button"
                  class="btn btn-primary"
                >Edit</a>

                <a
                  onClick="if(confirm('Are you sure your want to {{this.name}}?')){deleteProduct('{{this._id}}')}"
                  style="color:white"
                  type="button"
                  class="btn btn-danger"
                >Delete</a>
              </td>
            </tr>
          {{/each}}
        </tbody>

      </table>
    </div>
  </div>
</div>