<div class="container mt-4">
  <div class="row">
    {{#each orderProducts}}
      <div class="col-md-3 mt-4">
        <div class="card" style="width: 15rem;">
          <img
            class="card-img-top"
            src="/images/{{this.products._id}}.jpg"
            alt="Card image cap"
          />
          <div class="card-body">
            <h5 class="card-title">{{this.products.name}}</h5>
            <p class="card-text">Category : {{this.products.category}}</p>
            <p class="card-text">Price : {{this.products.price}}</p>
            <p class="card-text">Quantity : {{this.quantity}}</p>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>